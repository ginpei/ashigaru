{
  "extends": ["next/core-web-vitals", "plugin:tailwindcss/recommended"],
  "plugins": ["prettier", "import"],
  "rules": {
    "import/order": ["error", {
      "alphabetize": {
        "order": "asc"
      },
      "newlines-between": "never"
    }],
    "prettier/prettier": "error",
    "tailwindcss/no-custom-classname": [
      "warn",
      {
        "whitelist": ["[A-Z].*"]
      }
    ]
  }
}
